@model SchoolManagementSystem.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<h1>Delete Enrollment</h1>
<hr />
<div>
    <h4>Are you sure you want to delete this enrollment?</h4>
    <dl class="row">
        <dt class="col-sm-3">Student</dt>
        <dd class="col-sm-9">@Model.Student?.Name</dd>

        <dt class="col-sm-3">Course</dt>
        <dd class="col-sm-9">@Model.Course?.Title</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EnrollmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
