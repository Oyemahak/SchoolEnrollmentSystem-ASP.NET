@model IEnumerable<SchoolManagementSystem.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<h1>Enrollments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Enrollment</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student</th>
            <th>Course</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student?.Name</td>
                <td>@item.Course?.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
