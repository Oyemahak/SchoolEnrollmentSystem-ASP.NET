@model SchoolManagementSystem.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Credits</dt>
    <dd class="col-sm-10">@Model.Credits</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-warning">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
